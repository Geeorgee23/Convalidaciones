<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="convalidaciones_app.listado_convalidaciones_tree">
      <field name="name">Convalidaciones</field>
      <field name="model">convalidaciones_app.convalidaciones_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha"/>
          <field name="modulos_id"/>
          <field name="alumnos_id"/>
        </tree>
      </field>
    </record>

    <!-- Cambiar la vista del formulario -->
    <record model="ir.ui.view" id="convalidaciones_app.listado_convalidaciones_form">
      <field name="name">Formulario de convalidaciones</field>
      <field name="model">convalidaciones_app.convalidaciones_model</field>
      <field name="arch" type="xml">
        
        <form string="Nueva Convalidacion">
          <header>
         
            
          </header>

          <sheet>
            <group name="GrupoPadre">
              
              <field name="fecha"/>
              <field name="modulos_id"/>
              <field name="alumnos_id"/>


            </group>
          </sheet>

        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="convalidaciones_app.action_window_convalidaciones">
      <field name="name">Listado de convalidaciones</field>
      <field name="res_model">convalidaciones_app.convalidaciones_model</field>
      <field name="view_mode">tree,form</field>
    </record>


