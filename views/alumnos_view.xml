<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="convalidaciones_app.listado_alumnos_tree">
      <field name="name">Alumnos</field>
      <field name="model">convalidaciones_app.alumnos_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="edad"/>
          <field name="localidad"/>
          <field name="provincia"/>
          <field name="email" widget="email"/>
        </tree>
      </field>
    </record>

    <!-- Cambiar la vista del formulario -->
    <record model="ir.ui.view" id="convalidaciones_app.listado_alumnos_form">
      <field name="name">Formulario de Alumno</field>
      <field name="model">convalidaciones_app.alumnos_model</field>
      <field name="arch" type="xml">
        
        <form string="Nuevo Alumno">
          <header>
            <button name="generaContraseña" type="object" string="Generar Contraseña" class="oe_highlight" />
            
          </header>

          <sheet>
            <notebook>
              <page string="Datos Personales">
                <group name="3">
                  <h2 style="color:#a256a0">Datos Personales</h2>
  
                  <field name="foto" widget="image" class="oe_left oe_avatar"/>
  
                  <label for="name" class="oe_edit_only"/>
                  <h1>
                    <field name="name"/>
                  </h1>
  
                  <field name="password"/>
                  <field name="edad"/>
                </group>

              </page>
              
              <page string="Datos Adicionales">
                <group name="2">
                  <field name="localidad"/>
                  <field name="provincia"/>
                  <field name="email"/>
                </group>
              </page>
              
              <page string="Convalidaciones">

                <group name="3">
                  <field name="convalidaciones"/>
                </group> 

              </page>

              <page string="Profesores">

                <group name="4">
                  <field name="profesores"/>
                </group> 

              </page>

            </notebook>
            
          </sheet>

        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="convalidaciones_app.action_window_alumnos">
      <field name="name">Listado de Alumnos</field>
      <field name="res_model">convalidaciones_app.alumnos_model</field>
      <field name="view_mode">tree,form</field>
    </record>


