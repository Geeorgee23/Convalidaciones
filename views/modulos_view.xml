<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="convalidaciones_app.listado_modulos_tree">
      <field name="name">Modulos</field>
      <field name="model">convalidaciones_app.modulos_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="descripcion"/>
          <field name="horas"/>
          <field name="ciclo"/>
        </tree>
      </field>
    </record>

    <!-- Cambiar la vista del formulario -->
    <record model="ir.ui.view" id="convalidaciones_app.listado_modulos_form">
      <field name="name">Formulario de Modulos</field>
      <field name="model">convalidaciones_app.modulos_model</field>
      <field name="arch" type="xml">
        
        <form string="Nuevo Modulo">
          <header>
           
          </header>

          <sheet>
            <group name="GrupoPadre">
              <field name="name"/>
              <field name="descripcion"/>
              <field name="horas"/>
              <field name="ciclo"/>
            
            </group>
          </sheet>

        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="convalidaciones_app.action_window_modulos">
      <field name="name">Listado de Modulos</field>
      <field name="res_model">convalidaciones_app.modulos_model</field>
      <field name="view_mode">tree,form</field>
    </record>


